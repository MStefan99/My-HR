html
	color #fff
	font-size 12pt
	font-family sans-serif

	body
		margin 0
		background #3B3940
		height 100vh

		a
			font-weight bold
			color #fff

			&:hover
				color #888

		header
			height 10vh
			padding 0 5vw
			display flex
			flex-flow row wrap
			align-items center
			justify-content space-between

		main
			margin 0 10vw

			h1
				margin 2vh 4vw
				font-size 3rem

			p
				margin-top 3vh
				margin-bottom 3vh

			h2
				text-align center
				margin-top 7vh
				margin-bottom 4vh

			#status
				width 50vw
				margin 10vh auto 0

			p, h2
				margin-left auto
				margin-right auto

			form
				margin 5vh auto 10vh
				width 80vw

				@media screen and (min-width 768px)
					width 60vw

				@media screen and (min-width 1024px)
					width 30vw

				.disabled
					color #a00

				input, label
					width 100%
					margin .5rem auto
					display block
					box-sizing border-box

					&[for^="team"]
						display inline

					&[type="radio"]
						display inline
						width fit-content
						margin .5rem .5rem .5rem 0

				#username, #metropolia-domain
					width 50%
					display inline

		footer
			margin 2vh 0