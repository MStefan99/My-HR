primary-color = #3795e2
primary-color-light = #98beff
secondary-color = #21dea9
just-gray = #ddd


input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
	-webkit-appearance none
	margin 0

input[type=number]
	-moz-appearance textfield


html
	font-family sans-serif

	body
		margin 0
		background #eaeaea

		header
			display flex
			flex-flow row nowrap
			align-items center
			justify-content space-between
			background linear-gradient(90deg, primary-color 0%, secondary-color 100%)

			h1
				font-size 2rem
				margin 0 1vw

				@media screen and (min-width 425px)
					font-size 3rem
					margin 0 5vw

			.menu-container
				margin 1vh 2vw
				display flex
				flex-flow row wrap

			a
				color #fff
				text-decoration none

			.button
				background #555
				text-align center
				cursor pointer
				margin .5vh .5vw
				padding .5em 1em
				border-radius .5em
				transition background .2s cubic-bezier(0.25, 0.46, 0.45, 0.94),
				color .2s cubic-bezier(0.25, 0.46, 0.45, 0.94)

				&:hover
					color primary-color-light
					background #444

				p
					user-select none
					text-align center
					text-decoration underline
					margin 0

		main
			margin 5vh 5vw
			padding 3vh 3vw
			background #fff
			min-height 100vh

			div#info
				margin 5vh 5vw

			div#login-form
				width 80vw
				margin 10vh auto

				@media screen and (min-width 768px)
					width 50vw

				@media screen and (min-width 1024px)
					width 30vw

				h2
					font-weight bold
					text-align center

				form
					label, input
						display block
						width 100%
						font-weight bold
						text-align center
						margin 1vh 0

					label.label-info.required-info
						color #c00

					label.required:after
						content "*"
						color #c00

					input
						border none
						border-bottom 4px solid
						border-bottom-color just-gray
						transition border-bottom-color .2s linear

						&:hover
							border-bottom-color primary-color

						&:focus
							border-bottom-color secondary-color
							outline none

					.status-bad
						color #a00
						border-bottom-color #a00

					.status-good
						color #0a0
						border-bottom-color #0a0

					input[type="submit"], input[type="button"]
						cursor pointer
						color #fff
						background primary-color
						border-bottom-color primary-color
						transition background .2s linear,
						color .2s linear
						padding .5em 0

						&[disabled]
							background just-gray
							border-bottom-color just-gray
							color #000
							cursor not-allowed

						&:hover
							background just-gray
							color #000

					#qr
						display block
						width 50%
						margin 0 auto

					.label-info
						font-weight normal
						font-size 1em
						word-break break-word
						margin-bottom 4vh

			div#main-container
				form
					label, input[type="checkbox"]
						display inline
						margin-right .5em

					input
						display block

					label, input
						margin .5em 0

				table
					width 100%
					margin 1vh 0

				table, tr, th, td
					border 1px solid #000
					border-collapse collapse

				th, td
					padding 1vh 1vw
					word-break break-word
					max-width 40vh

				th
					font-weight bold
					background #999
					color #fff
					border 1px solid #000

				tr:nth-child(even)
					background #eee

				#version-table
					p:before
						content "• "

				@media screen and (max-width 425px)
					table, tr, td
						display block

					th
						display none

					tr
						border none

					td
						border none
						border-bottom 1px solid #000

				h2
					margin 2vh 0

					@media screen and (min-width 425px)
						margin 2vh 5vw

				.section
					margin 1vh 0

					@media screen and (min-width 425px)
						margin 1vh 7vw

					span
						display inline-block

					span.label
						font-weight bold
						margin .3em 0

						@media screen and (min-width 425px)
							margin .3em 1em

					a
						@media screen and (max-width 425px)
							display block

					p.block
						white-space pre-line

						@media screen and (min-width 425px)
							margin 1em 3em

						&.label
							font-weight bold
							font-style italic

							&:before
								content "• "

		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			background #555
			color #fff
			padding .5em 3em

			p
				margin .5em 2em

			a
				color #fff

				&:hover
					color just-gray
