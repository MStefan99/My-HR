primary-color = #3795e2
primary-color-light = #98beff
secondary-color = #21dea9
simply-red = #a00
almost-green = #0a0
just-gray = #ddd
pretty-gray = #999
very-gray = #555
shadow-color = #00000022

ease-in = cubic-bezier(0, 0.6, 0.4, 1)


html
	font-family sans-serif

	body
		display flex
		flex-direction column
		min-height 100vh
		width 100vw
		overflow-x hidden
		margin 0
		background #eaeaea

		.hidden
			display none !important

		@media screen and (max-width 1024px)
			.desktop-only
				display none !important

		noscript
			color #c00 !important
			font-weight bold !important

		header
			display flex
			flex-flow row nowrap
			align-items center
			justify-content space-between
			padding .5em 2em
			background linear-gradient(90deg, primary-color 0%, secondary-color 100%)
			box-shadow 0 .5vh 2vh shadow-color
			border-radius 0 0 20px 20px

			h1
				font-size 2rem
				margin 0
				text-shadow 0 .5vh 1.5vh shadow-color

				@media screen and (min-width 425px)
					font-size 3rem

			a
				color white
				text-decoration none

				&:hover
					color just-gray

			.button
				background very-gray
				white-space nowrap
				text-align center
				cursor pointer
				margin .5vh .5vw
				padding .5em 1em
				border-radius .5em
				box-shadow 0 .5vh 1vh shadow-color
				transition background-color .1s ease-in

				@media screen and (max-width 425px)
					display block

				&:hover
					background #444

				&:active
					background #333

		div#login-container
			width 25em
			flex-grow 1
			padding 3em
			margin 10vh auto
			background white
			box-shadow 0 .5vh 2vh shadow-color
			border-radius 10px

			@media screen and (max-width 425px)
				width 90vw
				padding 1em
				box-sizing border-box

			h2
				text-align center

			form
				label, input
					display block
					width 100%
					margin 1vh 0
					text-align center
					font-weight bold

				input
					border none
					padding .2em
					border-radius 8px
					box-sizing border-box
					outline none
					border-bottom 4px solid just-gray
					transition border-bottom-color .2s ease-in,
					background-color .2s ease-in,
					box-shadow .2s ease-in,
					color .2s ease-in

					&:hover
						border-bottom-color primary-color

					&:focus
						border-bottom-color secondary-color
						box-shadow 0 0 1vh -.1vh shadow-color

				.status-bad
					color simply-red
					border-bottom-color simply-red
					background just-gray

				.label-status
					color simply-red

				input[type="submit"]
					padding .5em 0
					color white
					cursor pointer
					background primary-color
					border-bottom-color primary-color
					box-shadow 0 .5vh 1vh shadow-color

					&[disabled]
						color black
						background just-gray
						border-bottom-color just-gray
						cursor not-allowed

					&:hover
						color black
						background just-gray
						box-shadow none

					&:focus
						border-bottom-color secondary-color
						background secondary-color
						color white
						box-shadow inset 0 .5vh 1vh -.5vh shadow-color

				#qr
					display block
					width 50%
					margin 0 auto 1vh auto

				label.required:after
					content "*"
					color simply-red

				.label-info
					&#secret
						word-break break-all

					&.required-info
						color simply-red

		main
			flex-grow 1
			margin 5vh 0
			padding 3vh 3vw
			background white
			box-shadow 0 .5vh 2vh shadow-color
			border-radius 20px

			@media screen and (min-width 425px)
				margin 5vh 5vw

			h1 a, h2 a, h3 a
				color inherit

				&:hover
					color very-gray

				&:active
					color pretty-gray

			#tab-container
				display flex
				flex-flow row wrap
				justify-content space-between
				margin-bottom 1em

				.tab
					flex-grow 1
					padding 1em .5em
					background white
					white-space nowrap
					text-align center
					cursor pointer
					user-select none
					border-top 1px solid black
					transition box-shadow .1s ease-in

					&.selected
						z-index 1
						box-shadow 0 .5vh 1vh .1vh shadow-color

			.icon
				width 20px

			.center
				display block
				margin 0 auto

			form
				label, input[type="checkbox"]
					display inline
					margin-right .5em

				input
					display block

				label, input
					margin .5em 0

			table
				width 100%
				margin 1vh 0
				border-radius 10px
				overflow hidden
				border-collapse collapse
				box-shadow 0 .2vh 1vh .2vh shadow-color

				th, td
					padding 1vh 1vw

					.button
						text-decoration underline
						cursor pointer

				thead tr
					font-weight bold
					background pretty-gray
					color white

				tbody tr
					border-bottom 1px solid just-gray

					&.clickable
						user-select none
						cursor pointer

						&:hover
							background just-gray

					@media screen and (min-width 768px)
						td:not(:last-child)
							border-right 1px solid black

				@media screen and (max-width 768px)
					thead tr
						display flex
						flex-flow row nowrap
						justify-content flex-start

					tbody
						td
							display inline-block

						tr
							display block

				&#version-table
					p:before
						content: 'Â» '

					@media screen and (max-width 768px)
						tbody tr td:first-child
							display block

			.button
				display inline-block
				padding .25em 0
				margin .5em 1em .5em 0
				width fit-content
				text-decoration none
				color black
				background #eee
				cursor pointer
				user-select none
				border-radius .25em
				border 1px solid just-gray
				box-shadow 0 .5vh 1vh -.2vh shadow-color

				&:hover
					background just-gray

				&:active
					background pretty-gray

				&.disabled
					background pretty-gray
					border-color pretty-gray
					filter grayscale()
					cursor not-allowed
					box-shadow none

				.text
					margin 0 .25em
					font-weight bold

				.icon
					margin 0 .25em
					vertical-align text-bottom

			.section
				margin 1vh .5vw

				@media screen and (min-width 425px)
					margin 1vh 2vw

				a
					display block

				span
					display inline-block

					&.label
						font-weight bold
						margin .3em 0
						margin-right .2em

						@media screen and (min-width 425px)
							margin-right .5em

		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			background very-gray
			color white
			padding .5em 0
			border-radius 10px 10px 0 0
			box-shadow inset 0 0 3vh shadow-color

			p
				margin .5em 2em

			a
				color white

				&:hover
					color just-gray
