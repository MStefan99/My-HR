primary-color = #3795e2
primary-color-light = #98beff
secondary-color = #21dea9
simply-red = #a00
almost-green = #0a0
just-gray = #ddd
pretty-gray = #999
very-gray = #555
shadow-color = #00000022


html
	font-family sans-serif

	body
		display flex
		flex-direction column
		min-height 100vh
		margin 0
		background #eaeaea

		.hidden
			display none !important

		noscript
			color simply-red
			font-weight bold
			text-decoration underline

		header
			display flex
			flex-flow row nowrap
			align-items center
			justify-content space-between
			background linear-gradient(90deg, primary-color 0%, secondary-color 100%)
			box-shadow 0 .5vh 2vh shadow-color

			h1
				font-size 2rem
				margin 0 1vw
				text-shadow 0 .5vh 1.5vh shadow-color

				a:hover
					color just-gray

				@media screen and (min-width 425px)
					font-size 3rem
					margin 0 5vw

			.menu-container
				margin 1vh 2vw
				display flex
				flex-flow row wrap

				@media screen and (max-width 425px)
					flex-flow column nowrap

				a
					color white
					text-decoration none

				.button
					background very-gray
					white-space nowrap
					text-align center
					cursor pointer
					margin .5vh .5vw
					padding .5em 1em
					border-radius .5em
					box-shadow 0 .5vh 1vh shadow-color

					&:hover
						background #444

					&:active
						background very-gray

		main
			flex 1 0
			margin 5vh 5vw
			padding 3vh 3vw
			background white
			box-shadow 0 .5vh 2vw shadow-color

			h1 a, h2 a, h3 a
				color inherit

				&:hover
					color very-gray

				&:active
					color pretty-gray

			div#info
				margin 5vh 5vw

			div#login-form
				width 80vw
				margin 10vh auto

				@media screen and (min-width 768px)
					width 50vw

				@media screen and (min-width 1024px)
					width 30vw

				h2
					font-weight bold
					text-align center

				form
					label, input
						display block
						width 100%
						font-weight bold
						text-align center
						margin 1vh 0

					label.label-info.required-info
						color simply-red

					label.required:after
						content "*"
						color simply-red

					input
						border none
						border-bottom 4px solid
						border-bottom-color just-gray
						padding .2em
						transition border-bottom-color .2s linear,
						box-shadow .2s linear

						&:hover
							border-bottom-color primary-color

						&:focus
							border-bottom-color secondary-color
							outline none
							box-shadow 0 0 1vh -.1vw shadow-color

					.status-bad
						color simply-red
						border-bottom-color simply-red

					.status-good
						color almost-green
						border-bottom-color almost-green

					input[type="submit"]
						cursor pointer
						color white
						background primary-color
						border-bottom-color primary-color
						padding .5em 0
						box-shadow 0 .5vh 1vh shadow-color
						transition background .2s linear,
						color .2s linear,
						box-shadow .07s linear,
						border-bottom-color .07s linear

						&[disabled]
							background just-gray
							border-bottom-color just-gray
							color black
							cursor not-allowed

						&:hover
							background just-gray
							color black
							box-shadow none

						&:focus
							border-bottom-color secondary-color
							background just-gray
							color black
							box-shadow inset 0 .5vh 1vh -.5vh shadow-color

					#qr
						display block
						width 50%
						margin 0 auto
						box-shadow 0 .5vh 1vh shadow-color

					.label-info
						font-weight normal
						font-size 1em
						word-break break-word
						margin-bottom 4vh

			div#main-container
				#tab-container
					display flex
					flex-flow row wrap
					justify-content space-between
					margin-bottom 1em

					.tab
						border-top 1px solid black
						padding 1em .5em
						background just-gray
						text-align center
						cursor pointer
						user-select none
						flex 1 0

						&.selected
							background white
							z-index 1
							box-shadow 0 .5vh 1vh .1vw shadow-color

				#status-icon
					margin-left .25em

				.button
					display inline-block
					padding .25em 0
					margin .5em 1em .5em 0
					width fit-content
					text-decoration none
					color black
					background #eee
					cursor pointer
					user-select none
					border-radius .25em
					border 1px solid just-gray

					&:hover
						background just-gray

					&:active
						background pretty-gray

					&.disabled
						background pretty-gray
						border-color pretty-gray
						filter grayscale()
						cursor not-allowed

					.text
						margin 0 .25em
						font-weight bold

					.icon
						margin 0 .25em
						vertical-align text-bottom

				.icon
					width 20px

				.center
					display block
					margin 0 auto

				form
					label, input[type="checkbox"]
						display inline
						margin-right .5em

					input
						display block

					label, input
						margin .5em 0

				table
					width 100%
					margin 1vh 0
					box-shadow 0 .2vh 1vh .2vw shadow-color

					th, td
						padding 1vh 1vw

						.button
							text-decoration underline
							cursor pointer

					thead tr
						font-weight bold
						background pretty-gray
						color white

						td
							border 1px solid black

					tbody
						tr
							&.clickable
								user-select none
								cursor pointer

								&:hover
									background just-gray

							&.hidden
								display none

				table, tr, th, td
					border 1px solid black
					border-collapse collapse

				#version-table
					p:before
						content "• "

				@media screen and (max-width 768px)
					thead
						tr
							display flex
							flex-flow row nowrap
							justify-content flex-start

						tr, th
							border none

					tbody
						tr, td
							border none

						td
							display inline-block

						tr
							display block
							border-bottom 1px solid black

				h2
					margin 2vh 0

					@media screen and (min-width 425px)
						margin 2vh 5vw

				.section
					margin 1vh 0

					@media screen and (min-width 425px)
						margin 1vh 7vw

					span
						display inline-block

					span.label
						font-weight bold
						margin .3em 0
						margin-right .2em

						@media screen and (min-width 425px)
							margin-right .5em

					a
						@media screen and (max-width 425px)
							display block

					p.block
						white-space pre-line

						@media screen and (min-width 425px)
							margin 1em 3em

						&.label
							font-weight bold
							font-style italic

							&:before
								content "• "

		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			background very-gray
			color white
			padding .5em 0

			p
				margin .5em 2em

			a
				color white

				&:hover
					color just-gray
