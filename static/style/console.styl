primary-color = #3795e2
primary-color-light = #98beff
secondary-color = #21dea9
simply-red = #a00
almost-green = #0a0
just-gray = #ddd
pretty-gray = #999
very-gray = #555
shadow-color = #00000022


html
	font-family sans-serif

	body
		display flex
		flex-direction column
		min-height 100vh
		margin 0
		background #eaeaea

		.hidden
			display none !important

		@media screen and (max-width 1024px)
			.desktop-only
				display none !important

		noscript
			color #c00 !important
			font-weight bold !important

		header
			display flex
			flex-flow row nowrap
			align-items center
			justify-content space-between
			background linear-gradient(90deg, primary-color 0%, secondary-color 100%)
			box-shadow 0 .5vh 2vh shadow-color
			border-radius 0 0 20px 20px

			h1
				font-size 2rem
				margin 0 1vw
				text-shadow 0 .5vh 1.5vh shadow-color

				a:hover
					color just-gray

				@media screen and (min-width 425px)
					font-size 3rem
					margin 0 5vw

			.menu-container
				margin 1vh 2vw
				display flex
				flex-flow row wrap

				@media screen and (max-width 425px)
					flex-flow column nowrap

				a
					color white
					text-decoration none

				.button
					background very-gray
					white-space nowrap
					text-align center
					cursor pointer
					margin .5vh .5vw
					padding .5em 1em
					border-radius .5em
					box-shadow 0 .5vh 1vh shadow-color
					transition background-color .1s linear

					&:hover
						background #444

					&:active
						background #333

		div#login-container
			width fit-content
			flex-grow 1
			margin 10vh auto
			padding 3em
			background white
			box-shadow 0 .5vh 2vh shadow-color
			border-radius 10px

			h2
				font-weight bold
				text-align center

			form
				label, input
					display block
					width 100%
					font-weight bold
					text-align center
					margin 1vh 0

				input
					box-sizing border-box
					border none
					padding .2em
					border-radius 8px
					border-bottom 4px solid just-gray
					transition border-bottom-color .2s linear,
					box-shadow .2s linear

					&:hover
						border-bottom-color primary-color

					&:focus
						border-bottom-color secondary-color
						outline none
						box-shadow 0 0 1vh -.1vh shadow-color

				.status-bad
					color simply-red
					border-bottom-color simply-red

				.label-status
					color simply-red

				input[type="submit"]
					padding .5em 0
					color white
					background primary-color
					border-bottom-color primary-color
					cursor pointer
					box-shadow 0 .5vh 1vh shadow-color
					transition background .2s linear,
					border-bottom-color .2s linear,
					box-shadow .07s linear

					&[disabled]
						background just-gray
						border-bottom-color just-gray
						color black
						cursor not-allowed

					&:hover
						background just-gray
						color black
						box-shadow none

					&:focus
						border-bottom-color secondary-color
						background secondary-color
						color white
						box-shadow inset 0 .5vh 1vh -.5vh shadow-color

				#qr
					display block
					width 10em
					margin 0 auto 1vh auto

				label.label-info.required-info
					color simply-red

				label.required:after
					content "*"
					color simply-red

				.label-info
					max-width 20em
					margin 0 auto

					&:not(:last-child)
						margin-bottom 4vh

		div#info
			width fit-content
			padding 3vh 3vw
			margin 5vh auto
			box-shadow 0 .5vh 2vh shadow-color
			border-radius 20px

			flex-grow 1
			background white

			p
				max-width 40em
				line-height 1.3em

		main
			flex-grow 1
			margin 5vh 0
			padding 3vh 3vw
			background white
			box-shadow 0 .5vh 2vh shadow-color
			border-radius 20px

			@media screen and (min-width 425px)
				margin 5vh 5vw

			h1 a, h2 a, h3 a
				color inherit

				&:hover
					color very-gray

				&:active
					color pretty-gray

			#tab-container
				display flex
				flex-flow row wrap
				justify-content space-between
				margin-bottom 1em

				.tab
					border-top 1px solid black
					padding 1em .5em
					background white
					white-space nowrap
					text-align center
					cursor pointer
					user-select none
					flex 1 0
					transition box-shadow .1s linear

					&.selected
						z-index 1
						box-shadow 0 .5vh 1vh .1vh shadow-color

			#status-icon
				margin-left .25em

			.button
				display inline-block
				padding .25em 0
				margin .5em 1em .5em 0
				width fit-content
				text-decoration none
				color black
				background #eee
				cursor pointer
				user-select none
				border-radius .25em
				border 1px solid just-gray
				box-shadow 0 .5vh 1vh -.2vh shadow-color

				&:hover
					background just-gray

				&:active
					background pretty-gray

				&.disabled
					background pretty-gray
					border-color pretty-gray
					filter grayscale()
					cursor not-allowed
					box-shadow none

				.text
					margin 0 .25em
					font-weight bold

				.icon
					margin 0 .25em
					vertical-align text-bottom

			.icon
				width 20px

			.center
				display block
				margin 0 auto

			form
				label, input[type="checkbox"]
					display inline
					margin-right .5em

				input
					display block

				label, input
					margin .5em 0

			table
				width 100%
				margin 1vh 0
				border-radius 10px
				overflow hidden
				box-shadow 0 .2vh 1vh .2vh shadow-color

				th, td
					padding 1vh 1vw

					.button
						text-decoration underline
						cursor pointer

				thead tr
					font-weight bold
					background pretty-gray
					color white

				tbody
					tr
						&.clickable
							user-select none
							cursor pointer

							&:hover
								background just-gray

						&:not(:last-child)
							border-bottom 1px solid black

			table, tr, th, td
				border-collapse collapse

			#version-table
				p:before
					content "• "

				@media screen and (max-width 768px)
					tbody tr
						td:first-child
							display block

			@media screen and (max-width 768px)
				thead
					tr
						display flex
						flex-flow row nowrap
						justify-content flex-start

				tbody
					td
						display inline-block

					tr
						display block

			h2
				margin 2vh 0

				@media screen and (min-width 425px)
					margin 2vh 5vw

			.section
				margin 1vh 0

				@media screen and (min-width 425px)
					margin 1vh 7vw

				span
					display inline-block

				span.label
					font-weight bold
					margin .3em 0
					margin-right .2em

					@media screen and (min-width 425px)
						margin-right .5em

				a
					@media screen and (max-width 425px)
						display block

				p.block
					white-space pre-line

					@media screen and (min-width 425px)
						margin 1em 3em

					&.label
						font-weight bold
						font-style italic

						&:before
							content "• "

		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			background very-gray
			color white
			padding .5em 0
			border-radius 10px 10px 0 0
			box-shadow inset 0 0 3vh shadow-color

			p
				margin .5em 2em

			a
				color white

				&:hover
					color just-gray
