ease-in = cubic-bezier(0, 0.6, 0.4, 1)


html
	font-family sans-serif

	body
		display flex
		flex-direction column
		margin 0
		min-height 100vh
		color var(--dark)
		background var(--light)
		overflow-x hidden
		--primary-color #3795e2
		--secondary-color #21dea9
		--background-color #fff
		--simply-red #a00
		--just-as-green #090
		--boring-red #ff8080
		--not-very-green #99ec74
		--light #fff
		--dark #000
		--light-gray #eee
		--just-gray #ddd
		--pretty-gray #999
		--very-gray #555
		--shadow-color #00000022

		&::-webkit-scrollbar
			background-color var(--light)
			border-radius 10px
			width 8px

		&::-webkit-scrollbar-thumb
			background-color var(--pretty-gray)
			border-radius 10px

		::selection
			background var(--simply-red)
			color var(--light)

		&.dark-theme
			--primary-color #532000
			--secondary-color #40000d
			--background-color #1c1c1d
			--boring-red #793f3f
			--not-very-green #35532a
			--light #0a0a0a
			--dark #aca491
			--light-gray #262524
			--just-gray #3b3937
			--pretty-gray #807971
			--very-gray #101010

			header, footer
				color var(--dark)

			header a:hover
				color var(--pretty-gray)

			main
				table thead
					color var(--dark)
					background var(--light-gray)

				#tab-container .tab.selected
					border 1px solid var(--dark)

				a
					&:hover
						color var(--pretty-gray)

					&:active
						color var(--just-gray)

			img:not(.icon)
				filter opacity(.4) !important

		a
			color inherit

		.hidden, .filter-hidden, .page-hidden
			display none !important

		.clickable
			cursor pointer
			user-select none

			&:hover
				color var(--pretty-gray)

		@media screen and (max-width 1024px)
			.desktop-only
				display none !important

		noscript
			color #c00 !important
			font-weight bold !important

		header
			display flex
			flex-flow row nowrap
			align-items center
			justify-content space-between
			padding .5em 2em
			color var(--light)
			background linear-gradient(90deg, var(--primary-color) 10%, var(--secondary-color) 90%)
			box-shadow 0 .5vh 2vh var(--shadow-color)
			border-radius 0 0 20px 20px

			@media screen and (max-width 425px)
				padding .5em 1em

			h1
				font-size 2rem
				margin 0
				text-shadow 0 .5vh 1.5vh var(--shadow-color)

				@media screen and (min-width 425px)
					font-size 3rem

			a
				text-decoration none

				&:hover
					color var(--just-gray)

			.button-container
				display flex
				flex-flow row wrap
				justify-content flex-end

			.button
				margin .5vh .5vw
				padding .5em 1em
				display inline-block
				font-weight bold
				background var(--very-gray)
				text-align center
				cursor pointer
				border-radius .5em
				white-space nowrap
				box-shadow 0 .5vh 1vh var(--shadow-color)
				transition filter .1s ease-in
				user-select none

				&:hover
					filter brightness(.9)

				&:active
					filter brightness(.8)

		div#login-container
			width 25vw
			flex-grow 1
			padding 3em
			margin 10vh auto
			background var(--light)
			box-shadow 0 .5vh 2vh var(--shadow-color)
			border-radius 10px

			@media screen and (max-width 1024px)
				width 50vw

			@media screen and (max-width 425px)
				width 90vw
				padding 1em
				box-sizing border-box
				font-size 1.1em

			h2
				text-align center

			form
				label, input
					display block
					width 100%
					margin 1vh 0
					text-align center
					font-weight bold

				input
					border none
					padding .2em
					border-radius 8px
					box-sizing border-box
					outline none
					border-bottom 4px solid var(--just-gray)
					transition border-bottom-color .2s ease-in,
					background-color .2s ease-in,
					box-shadow .2s ease-in,
					color .2s ease-in

					&:hover
						border-bottom-color var(--primary-color)

					&:focus
						border-bottom-color var(--secondary-color)
						box-shadow 0 0 1vh -.1vh var(--shadow-color)

					@media screen and (max-width 425px)
						padding .5em

				.status-bad
					color var(--simply-red)
					border-bottom-color var(--simply-red)
					background var(--just-gray)

				.label-status
					color var(--simply-red)

				input[type='submit']
					padding .5em 0
					color var(--light)
					cursor pointer
					background var(--primary-color)
					border-bottom-color var(--primary-color)
					box-shadow 0 .5vh 1vh var(--shadow-color)

					&[disabled]
						color var(--dark)
						background var(--just-gray)
						border-bottom-color var(--just-gray)
						cursor not-allowed

					&:hover
						color var(--dark)
						background var(--just-gray)
						box-shadow none

					&:focus
						color var(--light)
						border-bottom-color var(--secondary-color)
						background var(--secondary-color)
						box-shadow inset 0 .5vh 1vh -.5vh var(--shadow-color)

				#qr
					display block
					width 50%
					margin 0 auto 1vh auto

				label.required:after
					content "*"
					color var(--simply-red)

				.label-info
					&#secret
						word-break break-all

					&.required-info
						color var(--simply-red)

		main
			flex-grow 1
			margin 5vh 0
			padding 3vh 3vw
			background var(--background-color)
			box-shadow 0 .5vh 2vh var(--shadow-color)
			border-radius 20px

			@media screen and (min-width 425px)
				margin 5vh 5vw

			.inline-icon
				margin-left .5em
				vertical-align text-bottom

			a
				&:hover
					color var(--very-gray)

				&:active
					color var(--pretty-gray)

			#tab-container
				display flex
				flex-flow row wrap
				justify-content space-between
				margin-bottom 1em

				.tab
					flex-grow 1
					padding 1em .5em
					background var(--background-color)
					white-space nowrap
					text-align center
					cursor pointer
					user-select none
					border-top 1px solid var(--dark)
					transition box-shadow .1s ease-in

					&.selected
						z-index 1
						box-shadow 0 .5vh 1vh .1vh var(--shadow-color)

			.icon
				width 20px

				&.baseline
					vertical-align baseline

			.center
				display block
				margin 0 auto

			form
				label, input[type="checkbox"]
					display inline
					margin-right .5em

				input
					display block

				label, input
					margin .5em 0

			table
				width 100%
				margin 1vh 0
				border-radius 10px
				overflow hidden
				border-collapse collapse
				box-shadow 0 .2vh 1vh .2vh var(--shadow-color)

				th, td
					padding 1vh 1vw

					.button
						text-decoration underline
						cursor pointer

				thead
					font-weight bold
					background var(--pretty-gray)
					color var(--light)

				tbody tr
					border-bottom 1px solid var(--just-gray)

					@media screen and (min-width 768px)
						td:not(:last-child)
							border-right 1px solid var(--dark)

				@media screen and (max-width 768px)
					thead tr
						display flex
						flex-flow row nowrap
						justify-content flex-start

					tbody
						td
							display inline-block

						tr
							display block

				&#version-table
					h3:before
						content: '» '

					p:before
						content: '› '

					@media screen and (max-width 768px)
						tbody tr td:first-child
							display block

			#note-container
				display flex
				flex-flow column nowrap
				align-items flex-start

			.note
				display block
				margin 1em 0
				padding .5em
				width max-content
				background var(--light)
				border-radius 10px
				border 1px solid var(--just-gray)
				box-shadow 0 .5vh 1vh -.2vh var(--shadow-color)
				max-width 80%

				&.my
					align-self flex-end

				.sender
					color var(--pretty-gray)

				.access-mode
					color var(--pretty-gray)
					font-style italic

			#note-editor
				display block
				margin 1em 0
				padding .5em
				background var(--light)
				border-radius 10px
				border 1px solid var(--just-gray)
				box-shadow 0 .5vh 1vh -.2vh var(--shadow-color)

				h3
					margin 1rem 0

				span, input
					margin .5em 1em .5em 0

				textarea
					display block
					width 100%
					color var(--dark)
					background var(--light)
					height 3em
					resize vertical
					font-family sans-serif

			input
				border 1px solid var(--dark)
				border-radius 5px
				padding .25em
				color var(--dark)
				background var(--light)

			.button
				display inline-block
				padding .25em .5em
				margin .5em 1em .5em 0
				position relative
				width fit-content
				text-decoration none
				background var(--light-gray)
				cursor pointer
				user-select none
				border-radius .25em
				border 1px solid var(--just-gray)
				box-shadow 0 .5vh 1vh -.2vh var(--shadow-color)
				transition box-shadow .2s ease-in,
				filter .2s ease-in,
				border-color .2s ease-in

				.badge
					position absolute
					right 0
					top 0
					transform translate(50%, -50%)
					font-size .8em
					padding 2px
					font-weight bold
					border-radius 50%
					color var(--light)

					&#accepted-badge
						background var(--just-as-green)

					&#rejected-badge
						background var(--simply-red)

				&:hover
					filter brightness(.95)

				&:active, &.pressed
					filter brightness(.9)
					box-shadow inset 0 .5vh 1vh -.2vh var(--shadow-color)

				&.disabled
					background var(--pretty-gray)
					border-color var(--pretty-gray)
					filter grayscale()
					cursor not-allowed
					box-shadow none

					&:active
						pointer-events none

				&.green
					background var(--not-very-green)

				&.red
					background var(--boring-red)

				.text
					margin 0 .25em
					font-weight bold

				.icon
					margin 0 .25em
					vertical-align text-bottom

			.section
				margin 1vh .5vw

				#links, #free-form
					white-space pre-line

				@media screen and (min-width 425px)
					margin 1vh 2vw

				span
					display inline-block

					&.label
						font-weight bold
						margin .3em 0
						margin-right .2em

						@media screen and (min-width 425px)
							margin-right .5em

		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			color var(--light)
			background var(--very-gray)
			padding .5em 0
			border-radius 10px 10px 0 0
			box-shadow inset 0 0 3vh var(--shadow-color)

			p
				margin .5em 2em

			a
				&:hover
					color var(--just-gray)
