html
	color #fff
	font-size 12pt
	font-family sans-serif

	body
		margin 0
		background #3B3940
		height 100vh

		a
			font-weight bold
			color #fff

			&:hover
				color #888

		header
			height 10vh
			padding 0 5vw
			display flex
			flex-flow row wrap
			align-items center
			justify-content space-between

		main
			margin 0 10vw

			h1
				margin 5vh 3vw
				font-size 3rem

			h2
				margin 5vh 6vw

			#content-container
				margin 5vh auto 10vh
				width 80vw

				@media screen and (min-width 768px)
					width 60vw

				@media screen and (min-width 1024px)
					width 30vw

				form
					margin-top 5vh
					.disabled
						color #c00

					input, label
						width 100%
						margin .5rem auto
						display block
						box-sizing border-box

						&[for^="team"]
							display inline

						&[type="radio"]
							display inline
							width fit-content
							margin .5rem .5rem .5rem 0

					label.label-info.required-info
						color #c00

					label.required:after
						content "*"
						color #c00

					#username, #metropolia-domain
						width 50%
						display inline

		footer
			margin 2vh 0