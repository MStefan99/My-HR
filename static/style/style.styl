html
	color white
	font-size 12pt
	font-family sans-serif
	scroll-behavior smooth

	body
		display flex
		flex-direction column
		min-height 100vh
		margin 0
		overflow-x hidden
		background var(--background-color)
		--theme-color #ffc14b
		--healthy-red #bd0000
		--kinda-gray #888
		--background-color #28282f
		--panel-color #00000088

		::selection
			background var(--theme-color)
			color white

		.hidden
			display none !important

		a
			font-weight bold
			color white

			&:hover
				color var(--kinda-gray)

		header
			height 10vh
			padding 0 5vw
			position sticky
			top 0
			left 0
			right 0
			background none
			display flex
			flex-flow row wrap
			align-items center
			justify-content space-between
			z-index 10
			transition background-color .2s linear

			a
				display inherit
				align-items inherit

				span
					margin-left .5em

			img
				height 5vh

		#flash-container
			width 90vw
			margin 0 auto

			.flash
				display flex
				flex-flow row nowrap
				align-items center
				margin 1em 0
				border-radius 10px
				padding 1em 2em
				color #fff

				&.ok
					background #35532a

				&.warning
					background #634b08

				&.error
					background #680519

			b
				margin-right 1em

		main
			margin-bottom 10vh
			flex 1 0

			.section
				margin 0 1em

			.center
				margin 0 auto

			#splash-container
				min-height 100vh
				width 80vw
				margin 15vh auto 0 auto
				text-align center

				.inactive
					opacity 0

				#splash
					margin 0 auto
					text-align center
					display flex
					flex-flow row nowrap
					justify-content center
					align-items flex-end

					#logo
						display inline-block
						height 4em
						top 1em
						z-index 1
						filter var(--drop-shadow(0 0 5em theme-color))
						transition transform cubic-bezier(0, 0, 0, 1) 1.5s,
						opacity linear .5s .5s

						&.inactive
							transform translateX(400%) rotate(270deg)

					.logo-text
						white-space nowrap
						font-size 2em
						display inline-block
						transition transform cubic-bezier(0, 0, 0, 1) 1.7s .8s,
						opacity linear .5s 1.2s

						&.inactive
							&#text-left
								transform translateX(100%)

							&#text-right
								transform translateX(-100%)

					@media screen and (min-width 425px)
						.logo-text
							font-size 3em

						#logo
							height 6em

					@media screen and (min-width 768px)
						.logo-text
							font-size 4em

						#logo
							height 8em

					@media screen and (min-width 1024px)
						.logo-text
							font-size 6em

						#logo
							height 12em

				#welcome-container
					transition opacity linear .5s

					h1, h2, a
						text-align center

					a
						display block

			#content-container
				margin 0 auto
				width 90vw

				@media screen and (min-width 768px)
					width 60vw

				@media screen and (min-width 1024px)
					width 40vw

				h1
					font-size 3em

				form
					margin-top 5vh
					margin-bottom 5vh

					label
						width 100%
						display inline-block
						margin-top .8em

						&.inline
							display inline

						&.label-info.required-info
							color var(--healthy-red)

						&.required:after
							content "*"
							color var(--healthy-red)

					input, textarea
						width 100%
						margin .5em 0 .2em 0
						padding .25em 0
						display block
						box-sizing border-box
						border none
						outline none
						background none
						border-bottom 2px solid var(--kinda-gray)
						border-radius 0
						color white
						transition var(--border-bottom-color) .2s linear

						&:hover
							border-bottom-color white

						&:focus
							border-bottom-color var(--theme-color)

						&[type='radio']
							display inline-block
							width max-content
							margin .5em
							margin-left 0
							cursor: pointer

						&[type='submit']
							background none
							color white
							border-bottom-color white
							font-weight bold
							padding .5em .75em
							cursor pointer
							width max-content

							&:hover:not([disabled])
								background white
								color black

						&[type='file']
							color white
							border-bottom none
							cursor pointer

						&[disabled]
							cursor not-allowed
							color var(--kinda-gray)
							border-color var(--kinda-gray)

							&:active
								pointer-events none

						&.status-bad
							color red
							border-bottom-color red

					#username
						text-align right
						font-size 1em

					textarea
						font-family sans-serif
						resize vertical
						height 10em
						min-height 5em
						max-height 60vh

					i
						display inline-block
						margin .5em 0

					#username, #metropolia-domain
						max-width 50%
						width max-content
						display inline

				table
					border-collapse collapse

					td
						padding .5em

						.clickable
							text-decoration underline
							cursor pointer

							&:hover
								color var(--kinda-gray)

					thead tr
						background var(--panel-color)

					@media screen and (max-width 768px)
						td, tr, th
							display block

				pre
					word-break break-word
					white-space pre-wrap

		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			background var(--background-color-dark)
			padding .5em 0

			p
				margin .5em 2em
