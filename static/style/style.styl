html
	color #fff
	font-size 12pt
	font-family sans-serif

	body
		margin 0
		background #28282f
		height 100vh

		a
			font-weight bold
			color #fff

			&:hover
				color #888

		header
			height 10vh
			padding 0 5vw
			display flex
			flex-flow row wrap
			align-items center
			justify-content space-between

		main
			margin 0 auto
			width 90vw

			@media screen and (min-width 768px)
				width 60vw

			@media screen and (min-width 1024px)
				width 40vw

			h1
				margin 5vh 3vw
				font-size 3rem

			#content-container
				margin 5vh 0 10vh

				form
					margin-top 5vh
					.disabled
						color #c00

					label
						width 100%
						display inline

					input, textarea
						width 100%
						margin .5rem 0
						display block
						box-sizing border-box
						border none
						outline none
						background none
						border-bottom 2px solid #888
						border-radius 0
						color #fff

						&:hover
							border-bottom-color #fff

						&[type="radio"]
							display inline-block
							width fit-content
							margin .5rem .5rem .5rem 0
							cursor: pointer

						&[type="submit"]
							background #fff
							color #000
							border-bottom none
							font-weight bold
							padding .2em .5em
							cursor pointer
							width fit-content

							&:hover
								background #ccc

						&[type="file"]
							border-bottom none

						&[disabled]
							cursor not-allowed
							color #888

						&#username
							text-align right
							font-size 1rem

					textarea
						font-family sans-serif
						resize vertical
						height 10rem

					label.label-info.required-info
						color #c00

					label.required:after
						content "*"
						color #c00

					#username, #metropolia-domain
						max-width 50%
						width fit-content
						display inline

		footer
			margin 2vh 0