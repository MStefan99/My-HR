html
	color #fff
	font-size 12pt
	font-family sans-serif
	scroll-behavior smooth

	body
		display flex
		flex-direction column
		min-height 100vh
		margin 0
		background #28282f

		a
			font-weight bold
			color #fff

			&:hover
				color #888

		header
			height 10vh
			padding 0 5vw
			position fixed
			top 0
			left 0
			right 0
			background #00000088
			display flex
			flex-flow row wrap
			align-items center
			justify-content space-between

			a
				display inherit
				align-items inherit

				span
					margin-left .5em

			img
				height 5vh

		main
			margin-top 15vh
			margin-bottom 10vh
			flex 1 0

			#splash-wrapper
				height 100vh
				width 80vw
				margin 15vh auto 0 auto

				#splash
					margin 0 auto
					text-align center
					display flex
					flex-flow row nowrap
					justify-content center
					align-items flex-end

					#logo
						display inline-block
						height 4em
						top 1em
						transition transform cubic-bezier(0, 0, 0, 1) 1.5s,
						opacity linear .5s .5s

						&.hidden
							transform translateX(400%) rotate(270deg)
							opacity 0

					.logo-text
						white-space nowrap
						font-size 2rem
						transition transform cubic-bezier(0, 0, 0, 1) 1.7s .8s,
						opacity linear .5s 1.2s
						display inline-block

						&#text-left
							z-index -1

						&.hidden
							opacity 0

							&#text-left
								transform translateX(100%)

							&#text-right
								transform translateX(-100%)

					@media screen and (min-width 425px)
						.logo-text
							font-size 3rem

						#logo
							height 6em

					@media screen and (min-width 768px)
						.logo-text
							font-size 4rem

						#logo
							height 8em

					@media screen and (min-width 1024px)
						.logo-text
							font-size 6rem

						#logo
							height 12em

				#welcome-container
					transition opacity linear .5s 1.6s

					&.hidden
						opacity 0

					h1, h2, a
						text-align center

					a
						display block

			#content-container
				margin 0 auto
				width 90vw

				@media screen and (min-width 768px)
					width 60vw

				@media screen and (min-width 1024px)
					width 40vw

				h1
					font-size 3rem

				form
					margin-top 5vh
					margin-bottom 5vh

					.disabled
						color #c00

					label
						width 100%
						display inline-block
						margin-top .8em

					input, textarea
						width 100%
						margin-top .2em
						display block
						box-sizing border-box
						border none
						outline none
						background none
						border-bottom 2px solid #888
						border-radius 0
						color #fff

						&:hover
							border-bottom-color #fff

						&[type="radio"]
							display inline-block
							width fit-content
							margin .5rem .5rem .5rem 0
							cursor: pointer

						&[type="submit"]
							background none
							color #fff
							border-bottom-color #fff
							font-weight bold
							padding .2em .5em
							cursor pointer
							width fit-content

							&:hover
								background #fff
								color #000

						&[type="file"]
							color #fff
							border-bottom none
							cursor pointer

						&[disabled]
							cursor not-allowed
							color #888

						&#username
							text-align right
							font-size 1rem

					textarea
						font-family sans-serif
						resize vertical
						height 10rem

					label.label-info.required-info
						color #c00

					label.required:after
						content "*"
						color #c00

					#username, #metropolia-domain
						max-width 50%
						width fit-content
						display inline

		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			background #00000022
			padding .5em 0

			p
				margin .5em 2em