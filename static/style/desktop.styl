window-color = #ffffffaa
icon-color = #ffffff88
pane-color = #ffffff44
pane-dark-color = #dddddd88
shadow-color = #00000022

ease-in = cubic-bezier(0, 0.6, 0.4, 1)


html
	font-family sans-serif
	font-size 14pt

	body
		margin 0
		height 100vh
		overflow hidden
		background url("/img/desktop.jpg") center
		background-size cover

		noscript
			color #c00 !important
			font-weight bold !important

		header
			position absolute
			top 0
			left 0
			right 0
			display flex
			flex-flow row nowrap
			justify-content space-between
			align-items center
			padding .2em .5em
			backdrop-filter blur(8px)
			color white
			font-weight bold
			user-select none
			border-radius 0 0 5px 5px
			background pane-color
			z-index 2
			box-shadow 0 .2vh 1vh shadow-color
			transition transform .2s ease-in

			&.hidden
				transform translateY(-95%)

				&:hover
					transform none

			a
				color white
				text-decoration none
				height fit-content

				img
					height 18px
					margin 0 .5em

		main
			.app-window
				position absolute
				left 50px
				top 50px
				width 750px
				height 500px
				min-width 300px
				min-height 100px
				border-radius 15px
				background window-color
				overflow hidden
				user-select none
				resize both
				display flex
				flex-flow column nowrap
				backdrop-filter blur(8px)
				box-shadow 0 .5vh 2vh shadow-color
				transition opacity .2s ease-in,
				transform .3s ease-in

				&.maximized
					left 0 !important
					top 0 !important
					width 100vw !important
					height 100vh !important

				&.minimized
					pointer-events none
					opacity 0
					transform scale(.8) translateY(30%)

				&.animated
					transition left .3s ease-in,
					top .3s ease-in,
					width .3s ease-in,
					height .3s ease-in

				&.hidden
					pointer-events none
					opacity 0
					transform scale(.9)

				&::-webkit-resizer
					display none

				.header
					width 100%
					height 25px
					padding 0 1em
					flex-shrink 0
					box-sizing border-box
					background window-color
					display flex
					flex-flow row nowrap
					justify-content space-between
					align-items center

					.title
						font-size 80%
						font-weight bold
						color black

					.icon-group
						width 40px
						display flex
						flex-flow row nowrap
						justify-content space-between
						align-items center

						.icon-img
							width 15px
							height 15px
							cursor pointer

						.icon
							width 10px
							height 10px
							border-radius 50%
							cursor pointer

							&.minimize-icon
								background #ee0

							&.maximize-icon
								background #0c0

							&.close-icon
								background #c00

				.content
					flex 1

					iframe
						width 100%
						height 100%
						border none
						user-select auto

		footer
			position absolute
			bottom 0
			left 0
			right 0
			z-index 2
			user-select none
			pointer-events none

			#dock
				max-width fit-content
				margin 0 auto
				padding 0 30px
				display flex
				flex-flow row nowrap
				justify-content center
				align-items center
				backdrop-filter blur(8px)
				pointer-events all
				background pane-color
				border-radius 1em 1em 0 0
				box-sizing border-box
				transform translateY(80%)
				overflow-y hidden
				transition transform .2s 1s ease-in

				&:hover
					transform translateY(0)
					transition transform .2s ease-in

				&.hidden
					transform translateY(100%)
					transition transform .2s ease-in

				#dock-separator
					width 5px
					height 8vh
					flex-shrink 0
					background pane-dark-color
					border-radius 2px
					margin 0 2em
					box-shadow 0 .2vh .5vh shadow-color

				.dock-shortcut
					width 8vh
					height 8vh
					margin 10px 10px
					flex-shrink 0
					background icon-color
					border-radius 30%
					cursor pointer
					display flex
					justify-content center
					align-items center
					box-shadow 0 .2vh .5vh shadow-color
					transition background-color .1s linear,
					transform .4s cubic-bezier(0, 0.5, 0.5, 1.5)

					&.hidden
						transform translateY(120%)

					&:hover
						background pane-color

					&:active
						transform scale(.9)

					img
						width 5vh
						filter drop-shadow(0 .3vh .2vh shadow-color)
