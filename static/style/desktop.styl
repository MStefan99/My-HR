window-color = #ffffffaa
icon-color = #ffffff88
pane-color = #ffffff44
pane-dark-color = #dddddd88
shadow-color = #00000022


html
	font-family sans-serif
	font-size 14pt

	body
		margin 0
		height 100vh
		overflow hidden
		background url("/img/desktop.jpg") center
		background-size cover

		header
			position absolute
			top 0
			left 0
			right 0
			display flex
			flex-flow row nowrap
			justify-content space-between
			background pane-color
			backdrop-filter blur(8px)
			color white
			padding .2em 1em
			border-radius 0 0 5px 5px
			box-shadow 0 .2vh 1vh shadow-color
			z-index 2

			a
				color white
				text-decoration none

		main
			.app-window
				position absolute
				left 50px
				top 50px
				width 500px
				height 500px
				min-width 300px
				min-height 100px
				border-radius 15px
				background window-color
				overflow hidden
				user-select none
				resize both
				display flex
				flex-flow column nowrap
				backdrop-filter blur(8px)
				box-shadow 0 .5vh 2vh shadow-color

				&::-webkit-resizer
					display none

				.header
					width 100%
					height 25px
					box-sizing border-box
					padding 0 1em
					background window-color
					display flex
					flex-flow row nowrap
					justify-content space-between
					align-items center
					cursor move

					.title
						font-size 80%
						font-weight bold
						color black

					.icon-group
						width 40px
						display flex
						flex-flow row nowrap
						justify-content space-between
						align-items center

						.icon-img
							width 15px
							height 15px
							cursor pointer

						.icon
							width 10px
							height 10px
							border-radius 50%
							cursor pointer

							&.minimize-icon
								background #dd0

							&.maximize-icon
								background #0c0

							&.close-icon
								background #c00

				.content
					flex 1

					iframe
						width 100%
						height 100%
						border none
						user-select auto

						header, footer
							display none !important

		footer
			position absolute
			bottom 0
			left 50%
			z-index 2

			#dock
				position relative
				left -50%
				padding 0 30px
				display flex
				flex-flow row wrap
				justify-content center
				align-items center
				backdrop-filter blur(8px)
				background pane-color
				border-radius 1em 1em 0 0
				box-sizing border-box
				transform translateY(80%)
				transition transform .2s 1s cubic-bezier(0.22, 0.61, 0.36, 1)

				&:hover
					transform translateY(0)
					transition transform .2s cubic-bezier(0.22, 0.61, 0.36, 1)

				#dock-separator
					width 5px
					height 8vh
					background pane-dark-color
					border-radius 2px
					margin 0 2em
					box-shadow 0 .2vh .5vh shadow-color

				.dock-shortcut
					width 8vh
					height 8vh
					margin 10px 10px
					background icon-color
					border-radius 30%
					cursor pointer
					display flex
					justify-content center
					align-items center
					box-shadow 0 .2vh .5vh shadow-color

					.dock-icon
						width 5vh
