doctype html

head
	include head

body
	header
		include header

	main
		h1 Welcome to [company name]!
		//iframe(width="560" height="315" src="https://www.youtube.com/embed/NqrKGvQT0eU" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
		p Video will be here
		h2#form-label Join us today by filling the form below!
		form(action="/join/" method="post" enctype="multipart/form-data")
			label(for="firstname") First name*
			input#firstname(type="text" name="firstName" required)
			label(for="lastname") Last name*
			input#lastname(type="text" name="lastName" required)
			label(for="email") Your Metropolia email*
			input#email(type="email" name="email" value=email disabled required)
			label(for="backup-email") Secondary email*
			input#backup-email(type="email" name="backupEmail" required)
			label(for="phone") Main phone number
			input#phone(type="tel" name="phone")
			label(for="phone") Secondary phone number
			input#backup-phone(type="tel" name="backupPhone")
			label Select your team*:
			input#team-e(type="radio" value="embedded" name="team" required)
			label(for="team-e") Embedded team
			br
			input#team-f(type="radio" value="frontend" name="team")
			label(for="team-f") Frontend team
			br
			input#team-b(type="radio" value="backend" name="team")
			label(for="team-b") Backend team
			br
			input#team-a(type="radio" value="android" name="team" disabled=mobile_disabled)
			label(for="team-b") Android team
			if mobile_disabled
				span.disabled *
			br
			input#team-i(type="radio" value="ios" name="team" disabled=mobile_disabled)
			label(for="team-b") iOS team
			if mobile_disabled
				span.disabled *
				br
				span.disabled Mobile teams are currently full, please check back later
			br
			label(for="links") Add useful links (GitHub, LinkedIn, etc.):
			textarea#links(name="links")
			label(for="free-form") Feel free to tell anything else you want:
			textarea#free-form(name="freeForm")
			label(for="cv") Please attach your cv*:
			input#cv(type="file" name="cv" required)
			input#submit(type="submit" value="Join!")

	footer
		include footer