doctype html

html(lang='en')
	head
		title My HR Desktop
		link(rel='stylesheet' type='text/css' href='/style/desktop.css')
		link(rel='icon' type='image/svg+xml' href='/console/favicon.ico')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')

	body
		header
			a(href='/console/')
				img(src='/img/mh-logo.svg')
			span My HR Desktop
			noscript
				span JavaScript is disabled in your browser.
					|  Desktop will not work.
			a(href='/console/settings/')
				img(src='/img/settings.svg')

		main

		footer
			div#dock
				div.dock-shortcut(data-src='/console/applications/'
					data-name='All applications' data-img='/img/applications.svg'
					title='All applications')
					img(src='/img/applications.svg')
				div.dock-shortcut(data-src='/console/applications/?type=stars'
					data-name='Your stars' data-img='/img/star-active.svg'
					title='Your stars')
					img(src='/img/star-active.svg')
				div.dock-shortcut(data-src='/console/applications/?type=pending'
					data-name='Pending applications' data-img='/img/progress.svg'
					title='Pending applications')
					img(src='/img/progress.svg')
				div.dock-shortcut(data-src='/console/applications/?type=accepted'
					data-name='Accepted applications' data-img='/img/checkmark.svg'
					title='Accepted applications')
					img(src='/img/checkmark.svg')
				div.dock-shortcut(data-src='/console/applications/?type=rejected'
					data-name='Rejected applications' data-img='/img/cross.svg'
					title='Rejected applications')
					img(src='/img/cross.svg')
				div#dock-separator
		script(type='text/javascript' src='/js/desktop.js')
