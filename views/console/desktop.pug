doctype html

html(lang='en')
	head
		title My HR Desktop
		link(rel='stylesheet' type='text/css' href='/style/desktop.css')
		link(rel='icon' type='image/svg+xml' href='/console/favicon.ico')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')

	body
		header
			a.icon(href='/console/')
				img(src='/img/mh-logo.svg')
			span My HR Desktop
			noscript
				span JavaScript is disabled in your browser.
					|  Desktop will not work.
			div.icon
				img#settings-icon(src='/img/settings.svg')

		div#settings-panel.hidden
			div.icon-group
				a.button(href='/console/logout/' title='Sign out')
					img.icon(src='/img/exit.svg')
				a.button(href='/console/exit/' title='Sign out everywhere')
					img.icon(src='/img/close.svg')
				div.button(title='Settings')#button-settings
					img.icon(src='/img/settings.svg')
				div.button(title='Help')#button-help
					img.icon(src='/img/help.svg')
			input(type='checkbox')#cb-menu
			label(for='cb-menu') Hide menu bar automatically
			br
			input(type='checkbox')#cb-dock
			label(for='cb-dock') Hide Dock automatically

		main

		footer
			div#dock
				div.shortcut(data-src='/console/applications/'
					data-name='All applications' data-img='/img/applications.svg'
					title='All applications')
				div.shortcut(data-src='/console/applications/?type=stars'
					data-name='Your stars' data-img='/img/star-active.svg'
					title='Your stars')
				div.shortcut(data-src='/console/applications/?type=pending'
					data-name='Pending applications' data-img='/img/progress.svg'
					title='Pending applications')
				div.shortcut(data-src='/console/applications/?type=accepted'
					data-name='Accepted applications' data-img='/img/checkmark.svg'
					title='Accepted applications')
				div.shortcut(data-src='/console/applications/?type=rejected'
					data-name='Rejected applications' data-img='/img/cross.svg'
					title='Rejected applications')
				div.shortcut(data-src='/console/feedback/'
					data-name='Feedback' data-img='/img/chat-bubble.svg'
					title='Feedback')
				div.shortcut(data-src='/console/notes/'
					data-name='Notes' data-img='/img/sticky-note.svg'
					title='Notes')
				div#dock-separator
		script(async type='text/javascript' src='/js/console/desktop.js')
