head
	include head

body
	header
		include header-min

	main
		div#login-form
			h2 Log in to My HR console
			form(action="login" method="post")
				label(for="username") Username
				input.text#username(type="text" name="username")
				label(for="password") Password
				input.text#password(type="password" name="password")
				label(for="otp") Authenticator code
				input.text#otp(type="text" name="otp")
				input#submit(type="submit" value="Log in")

	footer
		include footer